#include <iostream>
#include <string>
using namespace std;
int main()
{
    int k, n;
    long long bin = 0, multi = 1;
    string result;
    cout << "Enter the bits and number: ";
    cin >> k >> n;
    if (k < 0) {
        cout << "Error";
        return 0;
    }

    if (n >= 0) {
        while (n != 0) {
            long long digit = n % 2;
            bin += digit * multi;
            multi *= 10;  
            n /= 2;
        }
        string binary = to_string(bin); 
        for (int i = 0; i < k; i++)
        {
            result = binary.back() + result;
            binary.pop_back();  
            if (binary.empty()) break;
        }
        while (result.size() < k)
        {
            result = "0" + result;
        }
        cout << result;
    }
    else {
        n = -n;
        while (n != 0) {
            long long digit = n % 2;
            bin += (digit ^ 1) * multi; 
            multi *= 10; 
            n /= 2;
        }
        string binary = to_string(bin); 
        for (int i = 0; i < k; i++)
        {
            result = binary.back() + result;
            binary.pop_back();  
            if (binary.empty()) break;
        }
        while (result.size() < k)
        {
            result = "1" + result;
        }
        cout << result;
    }
    return 0;
}
