
#include <iostream>
#include <string>
using namespace std;
int main()
{
    int k, n;
    long long bin = 0, multi = 1;
    string result;
    cout << "Enter the bits and number: ";
    cin >> k >> n;
    if (k < 0) {
        cout << "Error";
        return 0;
    }
    
    if (n >= 0) {
        while (n != 0) {
            long long digit = n % 2;
            bin += digit * multi;
            multi *= 10;
            n /= 2;
        }
        string binary = to_string(bin);
        for (int i = 0; i < k; i++)
        {
            result += binary[i];
            if (binary[i] == '/0')break;
        }
        if (result.size() < k)
        {
            string nool;
            int len = k - result.size();
            for (int j = 0; j < len+1;j++)
            {
                nool += "0";
            }
            cout << nool << result;
            return 0;
        }
        cout << result;
        return 0;
    }
    else {
        n = -n;
        int digit = n % 2;
        bin += digit * multi;
        multi *= 10;
        n /= 2;
        string bin;
        for (int i=0; i != '/0'; i++) {
            if (bin[i] == 1) bin[i] = 0;
            else bin[i] = 1;
        }
    }
}

